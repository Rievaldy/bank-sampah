<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_list_parent_barang"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/tv_nama_parent_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parent Master Barang"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <ImageButton
            android:id="@+id/btnShow"
            android:background="@drawable/ic_baseline_add_circle_24"
            android:layout_marginHorizontal="10dp"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/btnHide"
            android:visibility="gone"
            android:background="@drawable/ic_baseline_remove_circle_24"
            android:layout_marginHorizontal="10dp"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_nama_parent_barang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/list_item_jenis_barang"/>

</LinearLayout>