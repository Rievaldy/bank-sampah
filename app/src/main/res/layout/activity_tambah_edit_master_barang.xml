<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">
    <FrameLayout android:layout_width="match_parent" android:layout_height="520dp">
        <ImageView
            android:id="@+id/ivFotoBarang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/kucing" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:alpha="0.2">
        </RelativeLayout>

        <Button
            android:id="@+id/btnPilihFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah Foto"
            android:textSize="20dp"
            android:layout_gravity="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="25dp"
            android:layout_gravity="bottom|center">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNamaBarang"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:textStyle="bold"
                android:hint="Nama Barang"
                android:gravity="center"
                android:textColor="@color/purple_500" />
        </com.google.android.material.textfield.TextInputLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/btnSimpan"
            android:background="@android:drawable/list_selector_background"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="5dp"
            android:layout_height="match_parent"
            android:layout_width="204dp" android:orientation="vertical">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/done"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Selesai"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#72DA07"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_height="match_parent"
            android:layout_width="2dp"
            android:background="@color/black"
            />
        <LinearLayout
            android:id="@+id/btnBatal"
            android:paddingTop="5dp"
            android:background="@android:drawable/list_selector_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent"
            android:layout_width="204dp" android:orientation="vertical">

            <ImageView
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/close" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Batal"
                android:textSize="20dp"
                android:textColor="#D60000"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>